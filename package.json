{
  "name": "@textpipeline/web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "4.5.1",
    "@material-ui/icons": "4.5.1",
    "moment": "2.24.0",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-helmet": "5.2.1",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:storybook": "start-storybook -p 6006",
    "clean:jest": "shx rm -rf .jest",
    "clean:coverage": "shx rm -rf \"coverage/!(.keep)\"",
    "clean:assets": "shx rm -rf build",
    "clean": "run-p clean:*",
    "build:assets": "react-scripts build",
    "build:storybook": "build-storybook -o build-storybook",
    "build": "run-s clean:assets build:*",
    "test:prettier:incremental": "pretty-quick --staged --check --verbose --pattern \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test:prettier": "prettier --check src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "test:coverage": "EXTEND_ESLINT=true react-scripts test --watchAll=false --coverage",
    "test:watch": "EXTEND_ESLINT=true react-scripts test",
    "test": "run-s test:prettier test:coverage",
    "deploy:heroku": "git push heroku master",
    "deploy:open": "heroku open",
    "deploy": "run-s deploy:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test:prettier:incremental test:coverage",
      "pre-push": "run-s test build"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app",
      "plugin:import/typescript",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort",
      "import"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "rules": {
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "arrow-spacing": "error",
      "brace-style": "error",
      "camelcase": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": "error",
      "eol-last": [
        "error",
        "always"
      ],
      "eqeqeq": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-cycle": "error",
      "import/no-duplicates": "error",
      "import/no-unresolved": "error",
      "import/no-useless-path-segments": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "key-spacing": [
        "error",
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "comments": 120
        }
      ],
      "max-params": [
        "error",
        4
      ],
      "no-alert": "error",
      "no-console": "error",
      "no-const-assign": "error",
      "no-debugger": "error",
      "no-delete-var": "error",
      "no-duplicate-imports": "error",
      "no-else-return": "error",
      "no-empty-pattern": "error",
      "no-eval": "error",
      "no-nested-ternary": "error",
      "no-param-reassign": "error",
      "no-plusplus": "error",
      "no-redeclare": "error",
      "no-return-await": "error",
      "no-shadow": "error",
      "no-tabs": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "no-undef-init": "error",
      "no-undefined": "error",
      "no-unused-vars": "error",
      "no-unneeded-ternary": "error",
      "no-use-before-define": "error",
      "no-var": "error",
      "no-whitespace-before-property": "error",
      "prefer-object-spread": "error",
      "prefer-const": "error",
      "prefer-rest-params": "error",
      "prefer-template": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "require-await": "error",
      "semi": [
        "error",
        "always"
      ],
      "simple-import-sort/sort": "error",
      "space-in-parens": [
        "error",
        "never"
      ],
      "spaced-comment": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!**/index.{js,jsx,ts,tsx}",
      "!**/*.stories.{js,jsx,ts,tsx}",
      "!src/setupTests.ts",
      "!**/*.d.ts",
      "!src/data/store.ts",
      "!src/config.ts",
      "!src/testing/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "html"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@storybook/addon-actions": "5.2.3",
    "@storybook/addon-links": "5.2.3",
    "@storybook/addons": "5.2.3",
    "@storybook/react": "5.2.3",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/enzyme-to-json": "1.5.3",
    "@types/eslint": "6.1.2",
    "@types/jest": "24.0.18",
    "@types/jest-matcher-utils": "21.0.2",
    "@types/jsdom": "12.2.4",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-helmet": "5.0.15",
    "@types/react-router": "5.1.2",
    "@types/react-router-dom": "5.1.0",
    "@typescript-eslint/parser": "2.3.3",
    "babel-loader": "8.0.6",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "enzyme-to-json": "3.4.2",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-simple-import-sort": "4.0.0",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "jest-environment-jsdom": "24.9.0",
    "jest-environment-jsdom-global": "1.2.0",
    "jest-enzyme": "7.1.1",
    "jest-matcher-utils": "24.9.0",
    "jsdom": "15.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "shx": "0.3.2",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  }
}
